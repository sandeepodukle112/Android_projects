<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_heade_nav"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/d_5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.hp.johndeere.util.RoundedImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="@dimen/d_110dp"
        android:layout_height="@dimen/d_110dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_default_user_image" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/d_5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/s_14sp"
        android:padding="@dimen/d_2dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="abc@appworks.co.in"
        android:textColor="@android:color/white"
        android:textSize="@dimen/s_12sp"
        android:visibility="gone" />

</LinearLayout>
